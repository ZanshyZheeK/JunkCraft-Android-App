<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bgPrimary"
    tools:context=".Menu_utana">

    <View
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="310dp"
        android:background="@drawable/bg_gradien_primary_blue"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints" />
    <ScrollView
        android:scrollbars="none"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginEnd="0dp"
        android:layout_marginStart="0dp"
        android:layout_marginTop="0dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/constraintLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="24dp">


            <ImageView
                android:id="@+id/imageView4"
                android:layout_width="96dp"
                android:layout_height="37dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="24dp"
                android:layout_marginEnd="8dp"
                android:src="@drawable/applogowhite2"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/constraintLayout"
                tools:ignore="MissingConstraints" />

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginTop="16dp"
                android:id="@+id/btnabout"
                android:layout_marginEnd="16dp"
                android:src="@drawable/aboutg"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <View
                android:id="@+id/view2"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_marginStart="24dp"
                android:layout_marginTop="24dp"
                android:background="@drawable/bg_view_cirle"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/imageView4"
                tools:ignore="MissingConstraints" />

            <com.github.florent37.shapeofview.shapes.CircleView
                android:id="@+id/circlefoto"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_marginStart="29dp"
                android:layout_marginTop="90dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <ImageView
                    android:id="@+id/fotouserhome"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />
                <ProgressBar
                    android:id="@+id/progressbar"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:visibility="visible"
                    android:indeterminateDrawable="@drawable/progress"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />
            </com.github.florent37.shapeofview.shapes.CircleView>

            <TextView
                android:id="@+id/namamenu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:layout_marginTop="26dp"
                android:fontFamily="@font/mmedium"
                android:text="Selamat Datang"
                android:textColor="#fff"
                android:textSize="18sp"
                android:ellipsize="end"
                android:maxLines="1"
                app:layout_constraintStart_toEndOf="@+id/view2"
                app:layout_constraintTop_toBottomOf="@+id/imageView4"
                tools:ignore="MissingConstraints" />

            <TextView
                android:id="@+id/alamatmenu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="4dp"
                android:fontFamily="@font/mmedium"
                android:text="Silahkan Login"
                android:textColor="#fff"
                android:textSize="14sp"
                android:ellipsize="end"
                android:maxLines="1"
                app:layout_constraintStart_toEndOf="@+id/circlefoto"
                app:layout_constraintTop_toBottomOf="@+id/namamenu"
                tools:ignore="MissingConstraints" />

            <TextView
                android:id="@+id/saldomenu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="24dp"
                android:layout_marginTop="4dp"
                android:fontFamily="@font/mmedium"
                android:text="Rp0"
                android:textStyle="bold"
                android:textColor="#fff"
                android:textSize="16sp"
                app:layout_constraintHorizontal_bias="0.95"
                app:layout_constraintStart_toEndOf="@+id/circlefoto"
                app:layout_constraintTop_toBottomOf="@+id/alamatmenu"
                tools:ignore="MissingConstraints" />

            <ImageView
                android:id="@+id/ivsaldo"
                android:layout_marginTop="4dp"
                android:layout_width="wrap_content"
                android:layout_height="22dp"
                android:src="@drawable/ic_add_saldo"
                app:layout_constraintStart_toEndOf="@+id/saldomenu"
                app:layout_constraintTop_toBottomOf="@+id/alamatmenu"/>

            <LinearLayout
                android:id="@+id/linearLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:layout_marginTop="120dp"
                android:layout_marginEnd="24dp"
                android:background="@drawable/bg_layout_white"
                android:orientation="vertical"
                android:paddingTop="30dp"
                android:paddingLeft="24dp"
                android:paddingRight="24dp"
                android:paddingBottom="30dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/imageView4"
                tools:ignore="MissingConstraints">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/mregular"
                    android:text="TutorialKreatif"
                    android:textColor="@color/blackSecondary"
                    android:textSize="20sp"
                    tools:ignore="MissingConstraints" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/mmedium"
                    android:layout_marginTop="4dp"
                    android:text="Pelajari untuk banyak Manfaat"
                    android:textColor="@color/grayPrmary"
                    android:textSize="16sp"
                    tools:ignore="MissingConstraints" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="16dp"
                    android:layout_marginBottom="16dp"
                    android:background="#ededed"
                    />

                <LinearLayout
                    android:layout_marginBottom="24dp"
                    android:layout_width="match_parent"
                    android:weightSum="3"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:id="@+id/tpaper"
                        android:orientation="vertical"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:gravity="center"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:layout_width="64dp"
                            android:layout_height="64dp"
                            android:src="@drawable/kertas"
                            tools:ignore="MissingConstraints" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/mmedium"
                            android:text="Paper"
                            android:textColor="@color/blackSecondary"
                            android:textSize="16sp"
                            tools:ignore="MissingConstraints" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/tmetal"
                        android:orientation="vertical"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:gravity="center"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:layout_width="64dp"
                            android:layout_height="64dp"
                            android:src="@drawable/kaleng"
                            tools:ignore="MissingConstraints" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/mmedium"
                            android:text="Metal"
                            android:textColor="@color/blackSecondary"
                            android:textSize="16sp"
                            tools:ignore="MissingConstraints" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/tplastic"
                        android:orientation="vertical"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:gravity="center"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:layout_width="64dp"
                            android:layout_height="64dp"
                            android:src="@drawable/plastik"
                            tools:ignore="MissingConstraints" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/mmedium"
                            android:text="Plastic"
                            android:textColor="@color/blackSecondary"
                            android:textSize="16sp"
                            tools:ignore="MissingConstraints" />
                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:weightSum="3"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:id="@+id/tglass"
                        android:orientation="vertical"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:gravity="center"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:layout_width="64dp"
                            android:layout_height="64dp"
                            android:src="@drawable/kaca"
                            tools:ignore="MissingConstraints" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/mmedium"
                            android:text="Glass"
                            android:textColor="@color/blackSecondary"
                            android:textSize="16sp"
                            tools:ignore="MissingConstraints" />
                    </LinearLayout>


                    <LinearLayout
                        android:id="@+id/twaste"
                        android:orientation="vertical"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:gravity="center"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:layout_width="64dp"
                            android:layout_height="64dp"
                            android:src="@drawable/ewallet"
                            tools:ignore="MissingConstraints" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/mmedium"
                            android:text="E-Waste"
                            android:textColor="@color/blackSecondary"
                            android:textSize="16sp"
                            tools:ignore="MissingConstraints" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/btnjual"
                        android:orientation="vertical"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:gravity="center"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:layout_width="64dp"
                            android:layout_height="64dp"
                            android:src="@drawable/jual"
                            tools:ignore="MissingConstraints" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/mmedium"
                            android:text="Sell"
                            android:textColor="@color/blackSecondary"
                            android:textSize="16sp"
                            tools:ignore="MissingConstraints" />
                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

            <TextView
                android:id="@+id/market1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:layout_marginTop="28dp"
                android:fontFamily="@font/mregular"
                android:text="Highlight Marketplace"
                android:textColor="@color/blackSecondary"
                android:textSize="20sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/linearLayout"
                tools:ignore="MissingConstraints" />

            <TextView
                android:id="@+id/market2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:layout_marginTop="0dp"
                android:fontFamily="@font/mmedium"
                android:text="Tekan disini untuk kategori lain"
                android:textColor="@color/grayPrmary"
                android:textSize="16sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/market1"
                tools:ignore="MissingConstraints" />

            <HorizontalScrollView
                android:id="@+id/horizontalview"
                android:scrollbars="none"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_marginStart="24dp"
                android:layout_marginTop="16dp"
                android:paddingStart="0dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/market2"
                tools:ignore="MissingConstraints">

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="100dp">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="wrap_content"
                        android:id="@+id/mobil"
                        android:layout_height="match_parent"
                        android:layout_marginEnd="24dp"
                        android:background="@drawable/bg_layout_white">

                        <com.github.florent37.shapeofview.shapes.RoundRectView
                            android:layout_width="227dp"
                            android:layout_height="match_parent"
                            android:elevation="1dp"
                            app:shape_roundRect_bottomLeftRadius="10dp"
                            app:shape_roundRect_bottomRightRadius="10dp"
                            app:shape_roundRect_topLeftRadius="10dp"
                            app:shape_roundRect_topRightRadius="10dp">
                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:id="@+id/gambarhorizon" />
                            <TextView
                                android:id="@+id/txhorizon"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/mregular"
                                android:text="Mobil dari Kardus"
                                android:textColor="#fff"
                                android:textSize="16sp"
                                android:textStyle="bold"
                                android:layout_marginEnd="12dp"
                                android:layout_marginTop="24dp"
                                android:layout_marginStart="20dp"
                                android:layout_gravity="end"
                                android:ellipsize="end"
                                android:maxLines="1"
                                android:shadowColor="@color/text_shadow"
                                android:shadowDx="-1"
                                android:shadowDy="-1"
                                android:shadowRadius="2"/>
                            <TextView
                                android:id="@+id/txhorizonharga"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="50dp"
                                android:layout_marginEnd="12dp"
                                android:layout_gravity="end"
                                android:fontFamily="@font/mmedium"
                                android:text="Rp 30000"
                                android:textColor="#fff"
                                android:textSize="12sp"
                                android:shadowColor="@color/text_shadow"
                                android:shadowDx="-1"
                                android:shadowDy="-1"
                                android:shadowRadius="1"/>

                            <ProgressBar
                                android:id="@+id/progressbar2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:indeterminateDrawable="@drawable/progress"
                                android:visibility="visible"
                                android:layout_gravity="center"/>
                        </com.github.florent37.shapeofview.shapes.RoundRectView>
                    </androidx.constraintlayout.widget.ConstraintLayout>

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="wrap_content"
                        android:id="@+id/lampu"
                        android:layout_height="match_parent"
                        android:layout_marginEnd="24dp"
                        android:background="@drawable/bg_layout_white">

                        <com.github.florent37.shapeofview.shapes.RoundRectView
                            android:layout_width="227dp"
                            android:layout_height="match_parent"
                            android:elevation="1dp"
                            app:shape_roundRect_bottomLeftRadius="10dp"
                            app:shape_roundRect_bottomRightRadius="10dp"
                            app:shape_roundRect_topLeftRadius="10dp"
                            app:shape_roundRect_topRightRadius="10dp">
                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:id="@+id/gambarhorizon2" />

                            <TextView
                                android:id="@+id/txhorizon2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/mregular"
                                android:text="Lampu dari Botol"
                                android:textColor="#fff"
                                android:textSize="16sp"
                                android:textStyle="bold"
                                android:layout_marginEnd="12dp"
                                android:layout_marginTop="24dp"
                                android:layout_marginStart="20dp"
                                android:layout_gravity="end"
                                android:ellipsize="end"
                                android:maxLines="1"
                                android:shadowColor="@color/text_shadow"
                                android:shadowDx="-1"
                                android:shadowDy="-1"
                                android:shadowRadius="2"/>

                            <TextView
                                android:id="@+id/txhorizonharga2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="50dp"
                                android:layout_marginRight="12dp"
                                android:layout_gravity="end"
                                android:fontFamily="@font/mmedium"
                                android:text="Rp 20000"
                                android:textColor="#fff"
                                android:textSize="12sp"
                                android:shadowColor="@color/text_shadow"
                                android:shadowDx="-1"
                                android:shadowDy="-1"
                                android:shadowRadius="1"/>
                            <ProgressBar
                                android:id="@+id/progressbar3"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:indeterminateDrawable="@drawable/progress"
                                android:visibility="visible"
                                android:layout_gravity="center"/>
                        </com.github.florent37.shapeofview.shapes.RoundRectView>
                    </androidx.constraintlayout.widget.ConstraintLayout>

                </LinearLayout>

            </HorizontalScrollView>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>